<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editar_Campo.Formulario_Editar_Campo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos del Predio"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:paddingHorizontal="10dp"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Nombre"
                        android:textColorHint="@color/colorGreen"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/txt_AgregarCampo_Nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_persona"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/colorGreen"
                            android:inputType="textPersonName|textCapSentences"
                            android:maxLength="50"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_AgregarCampo_Tipo"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_cultivo"
                            android:tint="@color/colorGreen"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="1dp"
                            android:id="@+id/spn_AgregarCampo_Tipo"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorGreen"
                        android:textAlignment="center"
                        android:visibility="gone"
                        app:counterEnabled="true"
                        app:counterMaxLength="20"
                        android:id="@+id/til_AgregarCampo_Cultivo"
                        app:errorEnabled="true"
                        android:hint="Nombre del Cultivo Nuevo">

                        <EditText
                            android:id="@+id/txt_AgregarCampo_Cultivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_cultivo"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/colorGreen"
                            android:inputType="textPersonName|textCapSentences"
                            android:maxLength="50"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>